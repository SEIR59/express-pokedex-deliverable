    <link rel="stylesheet" href="/app.css">
    <title>Edit Pokemon</title>
</head>
<body>
    <h1>Edit a Pokemon!</h1>
    
    <form action="/pokemon/id/edit" method="POST">
        <label>HP
        <input type="text" name="hp" placeholder="{{ data.stats.hp }}" >
        
        <label>Attack
        <input type="text" name="attack"  placeholder="{{ data.stats.attack }}">
    </label>

        <label>Defense
        <input type="text" name="defense"  placeholder="{{ data.stats.defense }}">
</label>
            <br />
            <br />
        <input type="submit" name="" value="Submit Changes" />
    </form>

    
</body>
</html>