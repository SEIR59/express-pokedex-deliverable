<body>
    <div class="show">
        <div class="line">
            <h1>Pokemon</h1>
            <a href="/pokemon/" type="submit">Home</a>
        </div>
        <ul>
            {% for pokemon in data%}
            <h2>{{pokemon.name}}</h2>

            <a href="/pokemon/{{forloop.index0}}">
