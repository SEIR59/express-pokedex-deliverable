<body>
    <nav>
        <h1>Pokemon Manager</h1>
    <button onclick=location.href="/pokemon/">Home</button>
    </nav>
    <div class="new-container">
        <h1>Add New Pokemon</h1>
        <form action="/pokemon" method="POST">
        <input type="text" name="name" placeholder="Name of Pokemon..">
        <input type="text" name="type" placeholder="Type of Pokemon..">
        Enter Stats:
        <input type="text" name="hp" placeholder="HP">
        <input type="text" name="attack" placeholder="Attack">
        <input type="text" name="defense" placeholder="Defense">
        <input type="text" name="speed" placeholder="Speed">
        <input type="submit" value="Submit New Pokemon"> 
        </form>
    </div>
    
    
</body>
</html>