{% layout "layout.liquid" %} {% block content %}
    <div class="flex flex-col justify-center items-center">
      <div
        class="w-11/12 bg-slate-500 flex justify-between py-5 px-8 items-center m-5 rounded-3xl border-solid border-4 border-slate-600"
      >
        <h2
          class="text-white text-6xl font-bold cursor-pointer hover:text-slate-800"
        >
          Pokedex
        </h2>
        <a href="/pokemon/new"
          ><h4
            class="text-white text-3xl font-bold cursor-pointer hover:text-slate-800"
          >
            Add New Pokemon
          </h4></a
        >
      </div>
      <div
        class="w-full flex flex-wrap gap-y-24 gap-x-10 justify-center items-center p-10 border-box"
      >
        {% for pokemon in Pokemons %}
        <div
          class="border-solid border-2 border-slate-600 px-16 py-4 rounded-3xl cursor-pointer shadow-2xl shadow-slate-800 hover:scale-125 bg-white"
        >
          <h2
            class="bg-slate-500 w-full text-center text-white text-xl mb-6 rounded-xl px-1 py-1"
          >
            {{ pokemon.name }}
          </h2>
          <a href="/pokemon/{{ forloop.index0 }}"
            ><img class="w-64 h-64" src="{{ pokemon.img }}" alt=""
          /></a>
          <div class="flex justify-between mt-4">
            <a href="/pokemon/{{ forloop.index0 }}/edit"><button class="px-3 font-bold rounded-sm text-slate-600 hover:text-blue-500 cursor-pointer">Update</button></a>
            <form
            method="POST" action="/pokemon/{{ forloop.index0 }}?_method=DELETE"
            >
              <input
                class="px-3 font-bold rounded-sm text-slate-600 hover:text-red-500 cursor-pointer"
                type="submit"
                value="Delete"
              >
                
              </input>
            </form>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    {% endblock %}
