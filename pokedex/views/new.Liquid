<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>New Pokemon</title>
  </head>
  <body class="bg-slate-300">
    <div class="flex flex-col justify-center items-center m-4">
      <div>
        <h1 class="text-4xl mb-4 text-gray-500 font-bold">
          Create New Pokemon
        </h1>
      </div>
      <form class="w-full max-w-sm" action="/pokemon" method="POST">
        <!--? START ~ NAME -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="name"
            >
              Name
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="name"
              type="text"
              placeholder="Enter Name"
            />
          </div>
        </div>
        <!--? END ~ NAME -->

        <!--? START ~ TYPE -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="type"
            >
              Type
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="type"
              type="text"
              placeholder="Enter Type"
            />
          </div>
        </div>
        <!--? END ~ TYPE -->

        <!--? START ~ HP -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="hp"
            >
              HP
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="hp"
              type="text"
              placeholder="Enter HP"
            />
          </div>
        </div>
        <!--? END ~ HP -->

        <!--? START ~ ATTACK -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="attack"
            >
              Attack
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="attack"
              type="text"
              placeholder="Enter Attack"
            />
          </div>
        </div>
        <!--? END ~ ATTACK -->

        <!--? START ~ DEFENSE -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="defense"
            >
              Defense
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="defense"
              type="text"
              placeholder="Enter Defense"
            />
          </div>
        </div>
        <!--? END ~ DEFENSE -->

        <!--? START ~ SP Attack -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="spattack"
            >
              SP Attack
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="spattack"
              type="text"
              placeholder="Enter SP Attack"
            />
          </div>
        </div>
        <!--? END ~ SP Attack -->

        <!--? START ~ SP Defense -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="spdefense"
            >
              SP Defense
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="spdefense"
              type="text"
              placeholder="Enter SP Defense"
            />
          </div>
        </div>
        <!--? END ~ SP Defense -->

        <!--? START ~ Speed -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="speed"
            >
              Speed
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="speed"
              type="text"
              placeholder="Enter Speed"
            />
          </div>
        </div>
        <!--? END ~ Speed -->

        <!--? START ~ IMAGE URL -->
        <div class="md:flex md:items-center mb-6">
          <div class="md:w-1/3">
            <label
              class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
              for="img"
            >
              Image URL
            </label>
          </div>
          <div class="md:w-2/3">
            <input
              class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-slate-500"
              name="img"
              type="text"
              placeholder="Enter Image URL"
            />
          </div>
        </div>
        <!--? END ~ IMAGE URL -->

        <div class="md:flex md:items-center">
          <div class="md:w-1/3"></div>
          <div class="md:w-2/3">
            <input
              class="shadow bg-slate-500 hover:bg-slate-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded cursor-pointer"
              type="submit"
              value="Create Pokemon"
            >
              
            </input>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
